<!DOCTYPE html>
<html lang="en">
<%= render :partial => "header" %>
<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "alert alert-#{key}") %>
<% end %>
<body data-spy="scroll" data-offset="64" data-target="#section-topbar">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <table class="table mb-5 d-flexã€€w-100 font-weight-normal">
          <thead>
            <tr class="">
                <th scope="col">Id</th>
                <th scope="col">Lesson</th>
                <th scope="col">Cateory</th>
                <th scope="col">Level</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% @lessons.each do |l| %>
              <tr>
                <td><%= l.id %></td>
                <td><%= l.lesson %></td>
                <td><%= l.category %></td>
                <td><%= l.level %></td>
                <td><%=link_to "Edit", edit_lesson_path(l) %></td>
                <td><%= link_to "X", lesson_path(l), method: :delete, data:{confirm: "Are you sure to delete?"}, class:"btn btn-danger" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%=link_to "Add Lesson", new_lesson_path %>
    </div>
  </div>
</body>
</html>