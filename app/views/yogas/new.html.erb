<div class="row m-5">
    <div class="col-12">
        <div class="m-5 text-center">
            <h3 class="font-weight-bold">Add new lesson</h5>
        </div>
        <%= form_for @yoga, url:confirm_yogas_path do |f|  %>
            <div class="form-group mx-5 d-flex pb-2 text-center">
                <%= f.label :date, "Date", class:"pr-2 col-4 font-weight-bold" %>
                <%= f.text_field :date, class: "form-control text-monospace col-8" %>
            </div>
            <div class="form-group mx-5 d-flex pb-2 text-center">
                <%= f.label :lesson_id, "Lesson", class:"pr-2 col-4 font-weight-bold" %>
                <%= f.text_field :lesson, class: "form-control text-monospace" %>
            </div>
            <div class="form-group mx-5 d-flex pb-2 text-center">
                <%= f.label :category, "Category", class:"pr-2 col-4 font-weight-bold" %>
                <%= f.text_field :category, class: "form-control text-monospace" %>
            </div>
            <div class="form-group mx-5 d-flex pb-2 text-center">
                <%= f.label :level, "Level", class:"pr-2 col-4 font-weight-bold" %>
                <%= f.text_field :level, class: "form-control text-monospace" %>
            </div>
            <div class="text-center">
                <%= f.submit :class=>"btn-center btn-outline-warning btn-lg" %>
            </div>
        <% end %>
    </div>
</div>