<div class="row m-2">
    <div class="my-3">
        <%= form_for @yoga, url:yogas_path do |f|  %>
            <div class="form-group col-12 d-flex pb-2 text-center">
                <%= f.label :date, "Date", class:"pr-2 col-4 font-weight-bold" %>
                <div class="form-control text-monospace col-8"><%= @yoga.date %></div>
            </div>
            <div class="form-group col-8 d-flex pb-2">
                <%= f.label :lesson, "Lesson" %>
                <%= f.text_field :lesson, class: "form-control text-monospace" %>
            </div>
            <div class="form-group col-8 d-flex pb-2">
                <%= f.label :category, "Category" %>
                <%= f.text_field :category, class: "form-control text-monospace" %>
            </div>
            <div class="form-group col-8 d-flex pb-2">
                <%= f.label :level, "Level" %>
                <%= f.text_field :level, class: "form-control text-monospace" %>
            </div>
            <%= f.submit %>
        <% end %>
    </div>
</div>